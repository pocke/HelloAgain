<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>

        <td class="cards">
        <div class="default">
            <div id="face_image" >顔写真</div>
            <div id="company"><%= card.affiliation %></div>
            <div id="position"><%= card.position %></div>
            <div id="name" ><%= card.name %></div>
            <div id="mail">E-mail: <%= card.user.email %></div>
            <div id="tell">Tel: <%= card.phone %></div>
        </div>
        </td>

        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
